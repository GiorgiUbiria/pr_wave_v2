										<option value="social-media" data-translate="contact.socialMedia">Social Media Management</option>
										<option value="advertising" data-translate="contact.advertising">Digital Advertising</option>
										<option value="mentorship" data-translate="contact.mentorship">Business Mentorship</option>
										<option value="content" data-translate="contact.content">Content Creation</option>
										<option value="strategy" data-translate="contact.strategy">Brand Strategy</option>
										<option value="analytics" data-translate="contact.analytics">Analytics & Reporting</option>
										<option value="courses" data-translate="contact.courses">Courses</option>
										<option value="other" data-translate="contact.other">Other</option>
