---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, COMPANY_NAME, COMPANY_TAGLINE, SERVICES } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>
	<body>
		<Header />
		
		<!-- Hero Section with Parallax -->
		<section class="hero parallax-container" id="hero">
			<div class="parallax-layer parallax-back">
				<div class="animated-bg"></div>
			</div>
			<div class="parallax-layer parallax-base">
				<div class="container">
					<div class="hero-content">
						<div class="wave-icon-large animate-bounce">üåä</div>
						<h1 class="hero-title">{COMPANY_NAME}</h1>
						<p class="tagline">{COMPANY_TAGLINE}</p>
						<p class="hero-description">
							Transform your digital presence with our comprehensive social media management, 
							advertising solutions, and expert mentorship. We help businesses ride the wave 
							of digital success.
						</p>
						<div class="hero-buttons">
							<a href="/contact" class="btn btn-primary">Get Started</a>
							<a href="/about" class="btn btn-secondary">Learn More</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Services Section -->
		<section class="section bg-light">
			<div class="container">
				<div class="text-center mb-lg animate-on-scroll">
					<h2>Our Services</h2>
					<p>Comprehensive digital marketing solutions tailored to your business needs</p>
				</div>
				<div class="grid grid-3">
					{SERVICES.map((service, index) => (
						<div class={`card service-card wave-animation animate-on-scroll stagger-${(index % 6) + 1}`}>
							<div class="service-icon">
								{service === 'Social Media Management' && 'üì±'}
								{service === 'Digital Advertising' && 'üìä'}
								{service === 'Business Mentorship' && 'üéØ'}
								{service === 'Content Creation' && '‚úçÔ∏è'}
								{service === 'Brand Strategy' && 'üé®'}
								{service === 'Analytics & Reporting' && 'üìà'}
							</div>
							<h3>{service}</h3>
							<p>Professional {service.toLowerCase()} services to help your business grow and succeed in the digital landscape.</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- About Preview Section with Parallax -->
		<section class="section about-preview-section">
			<div class="parallax-container">
				<div class="parallax-layer parallax-back">
					<div class="floating-elements">
						<div class="floating-circle circle-1"></div>
						<div class="floating-circle circle-2"></div>
						<div class="floating-circle circle-3"></div>
					</div>
				</div>
				<div class="parallax-layer parallax-base">
					<div class="container">
						<div class="grid grid-2 about-preview">
							<div class="about-content animate-on-scroll">
								<h2>Meet Our Leaders</h2>
								<p>
									PR Wave is led by two passionate digital marketing experts with years of experience 
									in social media management, advertising, and business growth strategies.
								</p>
								<p>
									Our founders bring together decades of combined experience in helping businesses 
									establish a strong digital presence and achieve their marketing goals.
								</p>
								<a href="/about" class="btn btn-primary mt-md">Learn About Our Team</a>
							</div>
							<div class="leaders-preview animate-on-scroll">
								<div class="leader-card animate-float">
									<div class="leader-avatar">üë©‚Äçüíº</div>
									<h4>Sarah Johnson</h4>
									<p>Co-Founder & Digital Strategy Expert</p>
								</div>
								<div class="leader-card animate-float" style="animation-delay: 1s;">
									<div class="leader-avatar">üë®‚Äçüíº</div>
									<h4>Michael Chen</h4>
									<p>Co-Founder & Social Media Specialist</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Courses Section -->
		<section class="section bg-light">
			<div class="container">
				<div class="text-center mb-lg animate-on-scroll">
					<h2>Master Social Media</h2>
					<p>Learn the ins and outs of social media platforms with our comprehensive courses</p>
				</div>
				<div class="grid grid-2">
					<div class="card course-card wave-animation animate-on-scroll stagger-1">
						<h3>Social Media Fundamentals</h3>
						<p>Master the basics of social media marketing across all major platforms.</p>
						<ul class="course-features">
							<li>Platform-specific strategies</li>
							<li>Content creation techniques</li>
							<li>Audience engagement methods</li>
							<li>Analytics and optimization</li>
						</ul>
