			function updateTranslations() {
				const elementsToTranslate = document.querySelectorAll('[data-translate]');
				
				elementsToTranslate.forEach(element => {
					const translationKey = element.getAttribute('data-translate');
					if (translationKey && (currentLanguage === 'en' || currentLanguage === 'ka')) {
						const translatedText = (faqTranslations[currentLanguage] as any)[translationKey];
						
						if (translatedText) {
							if (translationKey === 'faq.q4.answer') {
								element.innerHTML = translatedText;
							} else {
								element.textContent = translatedText;
							}
						}
					}
				});
				
				// Fix open FAQ items after translation update
				setTimeout(() => {
					document.querySelectorAll('.faq-item.active').forEach(item => {
						const answer = item.querySelector('.faq-answer') as HTMLElement;
						if (answer) {
							answer.style.maxHeight = answer.scrollHeight + 'px';
						}
					});
				}, 50);
			}
			
			// Listen for language change events
			window.addEventListener('languagechange', (e: any) => {
				if (e.detail && e.detail.language) {
					currentLanguage = e.detail.language;
					updateTranslations();
				}
			});
			
			// Initialize translations on page load
			document.addEventListener('DOMContentLoaded', () => {
				currentLanguage = localStorage.getItem('language') || 'en';
				updateTranslations();
			});
			
			// Make functions global for onclick handlers
			(window as any).toggleFAQ = toggleFAQ;
		</script>
