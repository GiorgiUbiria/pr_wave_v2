<style>
	.hero {
		background: var(--wave-gradient);
		color: var(--white);
		text-align: center;
		padding: var(--spacing-xl) 0;
	}

	.hero h1 {
		color: var(--white);
		font-size: 3rem;
		margin-bottom: var(--spacing-sm);
	}

	.hero p {
		font-size: 1.2rem;
		opacity: 0.9;
	}

	.courses-grid {
		gap: var(--spacing-xl);
	}

	.course-card {
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.course-header {
		display: flex;
		justify-content: flex-end;
		margin-bottom: var(--spacing-md);
	}

	.course-badge {
		padding: var(--spacing-xs) var(--spacing-sm);
		background: var(--ocean-blue);
		color: var(--white);
		border-radius: var(--radius-lg);
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
	}

	.course-badge.intermediate {
		background: #ff9500;
	}

	.course-badge.advanced {
		background: #ff6b35;
	}

	.course-badge.expert {
		background: #8b5cf6;
	}

	.course-description {
		flex-grow: 1;
		margin-bottom: var(--spacing-md);
	}

	.course-details {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-md);
		margin-bottom: var(--spacing-lg);
		padding: var(--spacing-md);
		background: var(--light-gray);
		border-radius: var(--radius-md);
	}

	.course-stat {
		display: flex;
		align-items: center;
		gap: var(--spacing-xs);
		font-size: 0.9rem;
	}

	.stat-icon {
		font-size: 1.1rem;
	}

	.course-curriculum {
		margin-bottom: var(--spacing-lg);
	}

	.course-curriculum h4 {
		margin-bottom: var(--spacing-sm);
		color: var(--dark-blue);
	}

	.course-curriculum ul {
		list-style: none;
		padding: 0;
	}

	.course-curriculum li {
		padding: var(--spacing-xs) 0;
		position: relative;
		padding-left: var(--spacing-md);
	}

	.course-curriculum li::before {
		content: '‚úì';
		position: absolute;
		left: 0;
		color: var(--ocean-blue);
		font-weight: bold;
	}

	.course-footer {
		margin-top: auto;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding-top: var(--spacing-md);
		border-top: 1px solid var(--light-gray);
	}

	.course-price {
		display: flex;
		flex-direction: column;
	}

	.price {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--ocean-blue);
	}

	.price-note {
		font-size: 0.8rem;
		color: var(--gray);
	}

	.course-btn {
		min-width: 120px;
	}

	.course-btn:disabled {
		background: var(--gray);
		cursor: not-allowed;
		transform: none;
	}

	.newsletter-signup {
		margin: var(--spacing-lg) 0;
	}

	.signup-form {
		display: flex;
		gap: var(--spacing-sm);
		max-width: 400px;
		margin: 0 auto;
	}

	.signup-form input {
		flex: 1;
		padding: var(--spacing-sm);
		border: 2px solid var(--light-gray);
		border-radius: var(--radius-md);
		font-size: 1rem;
	}

	.signup-form input:focus {
		outline: none;
		border-color: var(--ocean-blue);
	}

	.coming-features {
		margin-top: var(--spacing-xl);
	}

	.features-grid {
		margin-top: var(--spacing-lg);
	}

	.feature-item {
		text-align: center;
	}

	.feature-icon {
		font-size: 2.5rem;
		margin-bottom: var(--spacing-sm);
	}

	.feature-item h4 {
		margin-bottom: var(--spacing-xs);
		color: var(--dark-blue);
	}

	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2.5rem;
		}

		.courses-grid {
			grid-template-columns: 1fr;
		}

		.course-details {
			flex-direction: column;
			gap: var(--spacing-sm);
		}

		.course-footer {
			flex-direction: column;
			gap: var(--spacing-md);
			text-align: center;
		}

		.signup-form {
			flex-direction: column;
		}

		.features-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

