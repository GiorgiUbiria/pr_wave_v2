	.hero h1 {
		color: var(--white);
		font-size: 3rem;
		margin-bottom: var(--spacing-sm);
	}

	.hero p {
		font-size: 1.2rem;
		opacity: 0.9;
	}

	.story-grid {
		gap: var(--spacing-xl);
		align-items: center;
	}

	.story-content {
		font-size: 1.1rem;
		line-height: 1.7;
	}

	.story-content h2 {
		margin-bottom: var(--spacing-lg);
	}

	.story-content p {
		margin-bottom: var(--spacing-md);
	}

	.company-stats {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--spacing-lg);
		padding: var(--spacing-xl);
		background: var(--light-gray);
		border-radius: var(--radius-lg);
	}

	.stat-item {
		text-align: center;
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--ocean-blue);
		margin-bottom: var(--spacing-xs);
	}

	.stat-label {
		font-size: 0.9rem;
		color: var(--gray);
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.value-card {
		text-align: center;
		transition: transform 0.3s ease;
	}

	.value-card:hover {
		transform: translateY(-4px);
	}

	.value-icon {
		font-size: 3rem;
		margin-bottom: var(--spacing-md);
	}

	.founders-grid {
		gap: var(--spacing-xl);
	}

	.founder-card {
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.founder-image {
		text-align: center;
		margin-bottom: var(--spacing-lg);
	}

	.founder-avatar {
		font-size: 5rem;
		margin-bottom: var(--spacing-sm);
	}

	.founder-info h3 {
		font-size: 1.5rem;
		margin-bottom: var(--spacing-xs);
		color: var(--dark-blue);
	}

	.founder-info h4 {
		color: var(--ocean-blue);
		font-weight: 600;
		margin-bottom: var(--spacing-md);
	}

	.founder-info p {
		margin-bottom: var(--spacing-lg);
		line-height: 1.6;
	}

	.founder-expertise,
	.founder-background {
		margin-bottom: var(--spacing-lg);
	}

	.founder-expertise h5,
	.founder-background h5 {
		font-size: 1rem;
		font-weight: 600;
		color: var(--dark-blue);
		margin-bottom: var(--spacing-sm);
	}

	.expertise-tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-xs);
	}

	.tag {
		background: var(--ocean-blue);
		color: var(--white);
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--radius-lg);
		font-size: 0.8rem;
		font-weight: 500;
	}

	.founder-background ul {
		list-style: none;
		padding: 0;
	}

	.founder-background li {
		padding: var(--spacing-xs) 0;
		position: relative;
		padding-left: var(--spacing-md);
	}

	.founder-background li::before {
		content: '‚úì';
		position: absolute;
		left: 0;
		color: var(--ocean-blue);
		font-weight: bold;
	}

	.benefits-grid {
		gap: var(--spacing-xl);
	}

	.benefit-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: var(--spacing-md);
		padding: var(--spacing-lg);
	}

	.benefit-icon {
		font-size: 2.5rem;
	}

	.benefit-item h3 {
		margin-bottom: var(--spacing-sm);
		color: var(--dark-blue);
	}

	.cta-section {
		background: var(--wave-gradient);
		color: var(--white);
	}

	.cta-section h2 {
		color: var(--white);
		margin-bottom: var(--spacing-md);
	}

	.cta-section p {
		font-size: 1.1rem;
		margin-bottom: var(--spacing-lg);
		opacity: 0.9;
	}

	.cta-buttons {
		display: flex;
		gap: var(--spacing-md);
		justify-content: center;
		flex-wrap: wrap;
	}

	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2.5rem;
		}

		.story-grid {
			grid-template-columns: 1fr;
		}

		.company-stats {
			grid-template-columns: 1fr;
			gap: var(--spacing-md);
		}

		.founders-grid {
			grid-template-columns: 1fr;
		}

		.benefits-grid {
			grid-template-columns: 1fr;
		}

		.benefit-item {
			padding: var(--spacing-md);
		}

		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}

		.btn {
			width: 200px;
		}
	}
</style>

